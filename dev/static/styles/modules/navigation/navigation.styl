.burger
    border 0
    background-color transparent
    display block
    position absolute
    padding 0
    margin 0
    width 4.75%
    top -1.04vw
    cursor pointer
    height: 14.2vh
    max-height: 100%
    transition all .2s linear

    &__icon
        max-height 100%
    
    &:hover,
    &:focus
        top: -0.7vw

.modal-nav
    display none

    &--active
        display block
        position fixed
        width 100%
        height 100%
        top 0
        bottom 0
        left 0
        right 0
        background-color $main-text-color
        opacity 0.95
        z-index 2

.modal-close
    width: 5.99vw
    height 5.99vw
    right 1.82vw
    position absolute
    top 1.82vw
    transition all .2s linear

    &:hover,
    &:focus
        transform scale(1.03)

    &__btn
        width 100%
    
.modal-nav
    &__wrap
        height 100%
        display flex
        justify-content center
        align-items center

.nav
    position relative
    max-width 32vw
    padding 1.8vw 0

    &:before,
    &:after
        content ''
        position absolute
        left 50%
        transform: translateX(-50%)
        width 31.51vw
        height 2.6vw
        background-repeat no-repeat
        background-position center

    &:before
        background-image url(../images/general/nav-top.svg)
        top -2.6vw
    
    &:after
        background-image url(../images/general/nav-bottom.svg)
        bottom -2.6vw
    
    &__item
        padding 1.85vw 0
        text-align center
        position relative

        &:not(:last-child)
            .nav__link
                &:after
                    content "~"
                    position absolute
                    bottom -1.4vw
                    left 50%
                    transform translateX(-50%)
                    font-size 3.07vw
                    color #000
        
    &__link
        font-size 2.34vw
        font-family $cochin
        text-transform uppercase
        color $balck